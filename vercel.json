{
    "version": 2,
    "builds": [
      {
        "src": "proyecto_clinica/wsgi.py",
        "use": "@vercel/python",
        "config": {
          "runtime": "python3.11",
          "maxLambdaSize": "15mb",
          "buildCommand": "pip install -r requirements.txt && python manage.py collectstatic --noinput"
        }
      },
      {
        "src": "staticfiles/**",
        "use": "@vercel/static"
      }
    ],
    "routes": [
      { "src": "/static/(.*)", "dest": "/static/$1" },
      { "src": "/(.*)", "dest": "proyecto_clinica/wsgi.py" }
    ]
}
  